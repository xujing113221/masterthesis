%
% LaTeX-Bilder einbinden
%
% \tntlatexpic{bild.tex}{LABEL}{Eintrag Inhaltsverzeichnis}{Bildunterschrift}
%
\newcommand{\tntlatexpic}[4]
{
  \begin{figure*}[ht]
    \begin{center}
      \input{#1}
    \end{center}
    \ifthenelse{\equal{#3}{}}
               {\caption{{\label{#2}\textcaption{#3}}}}
               {\caption[#3]{{\label{#2}\textcaption{#4}}}}
  \end{figure*}
}
%
% EPS/PDF-Bilder einbinden
%
% \tntpdfpic[Optionen]{bild.eps|pdf}{LABEL}{Eintrag Inhaltsverzeichnis}{Bildunterschrift}
%
\newcommand{\tntpic}[5][]
{
  \begin{figure*}[ht]
    \begin{center}
      \ifthenelse{\equal{#1}{}}
                 {\includegraphics{#2}}
                 {\includegraphics[#1]{#2}}
    \end{center}
    \ifthenelse{\equal{#4}{}}
               {\caption{{\label{#3}\textcaption{#5}}}}
               {\caption[#4]{{\label{#3}\textcaption{#5}}}}
  \end{figure*}
}
